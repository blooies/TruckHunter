<br><br>


<% if session[:admin] %>
	<%= link_to "Logout", logout_path, method: :delete %><p>
	<h2>Trucks to Approve</h2>


	<table>
	  <th>Truck Name</th>
	  <th>Twitter Handle</th>
	  <th>Approve</th>
	  <th>Edit</th>
	  <th>Remove</th>

		<% @pending_trucks.each do |truck| %>
			<tr>
	      <td><%= truck.name %></td>
	      <td><a href="https://twitter.com/<%= truck.twitter_handle %>"><%= truck.twitter_handle %></a></td>
	      <td><%= link_to "approved!", truck_approve_path(truck) %></td>
	      <td><%= link_to "edit truck", edit_truck_path(truck), id: 'edit_truck'%></td>
	      <td><%= link_to "kill truck", truck_path(truck), method: :delete %></td>
	    </tr>
	  <% end %>
	</table>


	
<% end %>
