<div id='header'>
		<h1>TruckHunter</h1>
		<div id="searchbox">
	        <form id="searchform">
	        	<input type="text" name="foodtruck"  placeholder="search for a foodtruck!" id="autocomplete">
	        </form>
		</div>
</div>


 <div id='footer'>
	<h3><%= form_for @newtruck, url: "/addtruck" do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name%>
	<%= f.label :twitter_handle %> (without @)
	<%= f.text_field :twitter_handle %>
	<%= f.submit "Add the Truck!"%>
	<% end %></h3>
</div>

<div id='map' class='dark'></div>
<a href='#' id='geolocate' class='ui-button'>Find me</a>



<div class="newtrucktab">
	<div class="newtruck">
		<p><%= @message %></p>
	</div>


	<div class="opened">
	<%= form_for @newtruck, url: "/addtruck" do |f| %>
		Truck <%= f.label :name %><br>
		<%= f.text_field :name%><br>
		Truck's <%= f.label :twitter_handle %> 
		<%= f.text_field :twitter_handle %>
		<%= f.submit "let us know!"%>
		<% end %>
	</div>
</div>







